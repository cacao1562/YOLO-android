<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.NoActionBar"/>

    <style name="homeTabTheme" parent="MaterialTheme">
        <item name="tabTextColor">@color/gray</item>
        <item name="tabSelectedTextColor">@color/main</item>
        <item name="tabTextAppearance">@style/homelistTabTextAppearence</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/tab_selected</item>
    </style>

    <style name="homelistTabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/notosanskr_medium_hestia</item>
    </style>

    <style name="communityTabTextAppearence" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/notosanskr_bold_hestia</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconPadding">16dp</item>
    </style>


    <style name="CustomCalendarDateAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/selector_calendar_date</item>
    </style>

    <style name="communityUploadTitle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/color_gray_707070</item>
        <item name="fontFamily">@font/notosanskr_regular_hestia</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>